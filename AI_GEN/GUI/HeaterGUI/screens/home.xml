<screen permanent="true">
    <styles>
        <style name="main" bg_color="#backgraund"/>
        <style name="nopad" margin_all="0" pad_all="0"/> 
    </styles>
    <view width="240" height="135">
        <style name="main"/>
        <row width="100%" height="100%" style_pad_all="4">
          <column width="89" height="100%" style_bg_opa="0" style_pad_right="2">
            <row width="89" height="49">
              <!-- channel 1 component here -->
              <channel channel="CH1" ch_active="ch1_active" temp_small="ch1_temp_small" temp_big="ch1_temp_big" style_pad_all="0">
              </channel>
            </row>
            <row width="89" height="49" style_margin_top="4">
              <!-- channel 2 component here  -->
              <channel channel="CH2" ch_active="ch2_active" temp_small="ch2_temp_small" temp_big="ch2_temp_big" style_pad_all="0">
              </channel>
            </row>
            <row width="89" height="20" style_margin_top="4">
              <!-- page component here  -->
              <page style_pad_all="0"></page>
            </row>
          </column>
          <column width="141" height="126" style_bg_opa="0" style_margin_all="0" style_pad_left="2">
            <lv_tabview tab_bar_position="bottom" width="141" height="126" scrollable="false" style_bg_opa="0">
              <lv_tabview-tab_bar height="0" />
              <lv_tabview-tab text="1" scrollable="false">
                <style name="nopad"/>
                  <column scrollable="false"  width="141" height="126" style_bg_opa="0">
                    <row width="141" height="83">
                     <target_tmp target_temp="targetTemp"/>
                    </row>
                    <row width="141" height="39" style_margin_top="4">
                      <control time="opTime" command="command" />
                    </row>
                  </column>
              </lv_tabview-tab>

              <lv_tabview-tab text="2" scrollable="false">
                <style name="nopad"/>
                <info dummy="Page 2"></info>
              </lv_tabview-tab>

              <lv_tabview-tab text="3" scrollable="false">
                <style name="nopad"/>
                <info dummy="Page 3"></info>
              </lv_tabview-tab>

              <lv_tabview-tab text="4" scrollable="false">
                <style name="nopad"/>
                <info dummy="Page 4"></info>
              </lv_tabview-tab>

            </lv_tabview>
          </column>
        </row>
    </view>
</screen>